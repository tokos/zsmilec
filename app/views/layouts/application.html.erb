  <%= csrf_meta_tags %>
  <meta charset="UTF-8">
  <meta name="author" content="Bc. Tomáš Kohout" />
  <meta name="keywords" content="ZŠ, ZŠ Mileč, škola mileč, základka Mileč, school Mileč" />
