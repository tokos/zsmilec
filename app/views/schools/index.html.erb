<h1 class="table">Škola</h1>	
  
<table>  

<% @schools.each do |school| %>
  <tr>
  	<th>Název školy</th>
  	<th>ředitel</th>
  </tr>	
  <tr>
  	<td><%=h school.NAME %></td>
  	<td><%=h school.HEADMASTER %></td>
    <td><%= link_to 'Ukázat', school %></td>
    <td><%= link_to 'Upravit', edit_school_path(school) %></td>
    <td><%= link_to 'Smazat', school, method: :delete, data: { confirm: 'Jste si jistí?' } %></td>
  </tr>
<% end %>
</table>

<br />

