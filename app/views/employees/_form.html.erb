<%= form_for @employee, html: { multipart: true } do |f| %>

  <table>
  	<tr>
  	  <th>Titul</th>
  	  <td><%= f.text_field :DEGREE %></td>
  	</tr>
    <tr>
  	  <th>Jméno</th>
  	  <td><%= f.text_field :FIRST_NAME %></td>
  	</tr>
  	<tr>
  	  <th>Příjmení</th>
  	  <td><%= f.text_field :LAST_NAME %></td>
  	</tr>
  	<tr>
  	  <th>Učitel</th>
  	  <td><%= f.check_box(:TEACHER_FLAG, {}, checked_value = 1, unchecked_value = 0) %></td>
  	</tr>
  	<tr>
  	  <th>Adresa</th>
  	  <td><%= f.text_field :ADDRESS %></td>
  	</tr>
  	<tr>
  	  <th>Telefon</th>
  	  <td><%= f.text_field :PHONE %></td>
  	</tr>
  	<tr>
  	  <th>Email</th>
  	  <td><%= f.text_field :EMAIL %></td>
  	</tr>
  	<tr>
  	  <th>Datum nástupu</th>
  	  <% if @employee.ENTRY_DATE == nil %>
  	  	<td><%= f.text_field :ENTRY_DATE %></td>
  	  <% else %>
  	    <td><%= f.text_field :ENTRY_DATE, :value => @employee.ENTRY_DATE.strftime("%d.%m.%Y") %></td>
  	  <% end %>	
  	</tr>
  	<tr>
  	  <th>Pozice</th>
  	  <td><%= f.text_field :POSITION %></td>
    </tr> 
    <tr>
      <th>Foto</th>
      <td><%= f.file_field :image %></td>	
    </tr>   
  </table>

  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% @employee.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Uložit" %>
  </div>
<% end %>
