<table class="admin" style="font-size: x-small;">
  <tr>
  	<th>Pozice</th>
  	<th>Zaměstnanec</th>
  	<td rowspan="<%= @employees.size + 1 %>">
	  <table class="presscard" id="preview">
	  	<tr>
	  	  <td>Vyberte zaměstnance a zobrazí se detaily.</td>
	  	</tr>
	  </table>
	</td>	
  </tr>
  <% @employees.each do |employee| %>
    <tr>
      <td><%= employee.POSITION %></td>
      <% name = employee.DEGREE+' '+employee.FIRST_NAME+' '+employee.LAST_NAME %>	
      <!--<td><%= link_to name, '/n_employees/'+employee.ID.to_s, :class => 'empl' %></td>-->      
      <td><%= link_to name, { :action => 'show_employee', :id => employee.ID, :remote => true }, :class => 'empl' %></td>
    </tr>
  <% end %>
</table>
