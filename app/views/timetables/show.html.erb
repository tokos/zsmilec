  	      <% subject = Subject.find(hour.SUBJECT_ID) %>
  	      <td><%= subject.SHORT_NAME %></td>
  	    <% else %>
  	      <td></td>
  	    <% end %>    
  	  <% end %>  	
    </tr>  
  <% end %>
</table>

