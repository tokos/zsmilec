  <% Day.where(:TIMETABLE_ID => @timetable.ID).order(:POSITION).each do |day| %>
    <tr>
  	  <td><%= day.NAME %></td>
  	  <% Hour.where(:DAY_ID => day.ID).order(:POSITION).each do |hour| %>
